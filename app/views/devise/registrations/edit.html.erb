<div class="box1">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, id: 'edit_user', class: 'edit_user') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h3>アカウント編集</h3>

      <div class="box-icon">
        <%= f.label :icon, "アイコン" %><br />
        <%= f.file_field :icon %>
      </div>

      <div class="box-name">
        <%= f.label :username, "名前" %><br />
        <%= f.text_field :username %>
      </div>

      <div class="box-message">
        <%= f.label :message %><br />
        <%= f.text_field :message %>
      </div>

      <div class="box-email">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email %>
      </div>

      <div class="box-password">
        <%= f.label :password, "新しいパスワード" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="box-password">
        <%= f.label :password_confirmation, "パスワード(確認)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="box-password">
        <%= f.label :current_password, "現在のパスワード（変更を確認するため）" %><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="box-login">
        <%= f.submit "更新" %>
      </div>
    <% end %>

    <div class="box-newusr">
      <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当に削除してよろしいですか？" }, method: :delete, class: "delete-account-button" %>
    </div>

    <%= link_to "戻る", :back %>
  </div>
</div>
